<div class="row like-comment">
	<div class="col-md-6">
		<% if current_user.likes?(post) %>
			<%= form_for(current_user.likes.find_by(post_id: post.id),
									 method: :delete) do |f| %>
				<div><%= hidden_field_tag :post_id, post.id %></div>
				<%= f.submit "Unlike (#{post.likes.count})", class: 'btn btn-sm btn-primary' %>
			<% end %>
		<% else %>
			<%= form_for(current_user.likes.build) do |f| %>
				<div><%= hidden_field_tag :post_id, post.id %></div>
				<%= f.submit "Like (#{post.likes.count})", class: 'btn btn-sm btn-primary' %>
			<% end %>
		<% end %>
	</div>
	<%= link_to "Comment", post_path(post), class: 'btn btn-sm btn-primary pull-right' %>
</div>
