<div class="row post-show container-fluid">
  <div class="col-md-6 col-md-offset-3" style="margin-top: 20px">
  <%= render partial: 'shared/post', locals: {post: @post} %>
    </div>
  </div>

  <div class="comment-container">
    <div class= "col-md-6 col-md-offset-3">
      <%= form_for @comment do |f| %>
        <div class="form-group">
          <%= f.hidden_field :post_id, :value => @post.id %>
          <%= f.text_area :body, class: 'form-control', placeholder: "Write your comment"%><br>
        </div>
        <%= f.submit "Comment", class: "btn btn-primary pull-right" %>
      <% end %>
      <br>
      <% @post.comments.each do |comment| %>
          <div class="col-md-12">
            <div class= "comment-info">
              <strong><%=link_to comment.user.name, user_path(comment.user) %>:</strong><br>
              <span><%= comment.body %></span><br>
              <small><%= time_ago_in_words(comment.created_at) %> ago.</small>
            </div>
            <br>
          </div>
      <% end %>
     </div>
  </div>
</div>
